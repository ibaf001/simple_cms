<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<%= link_to("<< Back to List",{:action => 'index'}, :class => 'back-link') %>
<div class="sections show">
  <h2>Show Section</h2>

  <table summary="section detail view">
    <tr>
      <th>Page_ID</th>
      <td><%= @section.page_id %>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @section.name %>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %>
    </tr>
   
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %>
    </tr>
 
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %>
    </tr>
    
    <tr>
      <th>content</th>
      <td><%= @section.content %>
    </tr>
    
    
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %>
    </tr>
</table>
